{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}

    <div class="p-2">
        <form class="form-signin" method="post">

            <div class="card border-primary rounded-0">

                <!-- Cabecera -->
                <div class="card-header p-0">
                    <div class="bg-info text-white text-center p-2">
                        <h3><i class="fas fa-user-tie"></i> Registrarse</h3>
                    </div>
                </div>
                <div class="card-body p-3">

                    <!-- Introdocir correo -->
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                            </div>
                            <label for="inputEmail" class="sr-only">Correo electrónico</label>
                            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Correo electrónico" required autofocus>
                        </div>
                    </div>

                    <!-- Introducir contraseña -->
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-key text-info"></i></div>
                            </div>
                            <label for="inputPassword" class="sr-only">Contraseña</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                        </div>
                    </div>

                    <!-- Aceptar los términos y condiciones -->
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me" required> 
                            He leído y acepto los términos y codiciones de uso
                        </label>
                    </div>

                    <!-- Botón para registrarse -->
                    <div class="text-center">
                        <button class="btn btn-info btn-block rounded-0 py-2" type="submit">
                            Registrarse
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="p-2">
        <form class="form-signin" action="login">
            <div class="card border-primary rounded-0">
                <div class="card-body p-3">

                    <!-- Si no dispone de cuenta... -->
                    <div class="text-center">
                        ¿Ya tiene cuenta?
                        <button class="btn btn-info btn-block rounded-0 py-2 mt-2">
                            Iniciar sesión
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
